<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://java.sun.com/xml/ns/j2ee" 
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
 xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_5.xsd" 
 version="2.5"> 

    <!-- Descripción general de la aplicación web -->
    <display-name>Prototipo SCEC 2013</display-name>
    <description>
        SCEC - Sistema de Correo Electrónico Centralizado
    </description>

    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
        <param-value>edu.uag.iidis.scec.vista.scecRB</param-value>
    </context-param>

    <!-- Configuración del Filtro  -->


<filter>
    <filter-name>userAccessFilter</filter-name>
    <filter-class> 
        edu.uag.iidis.scec.filter.AuthorizationFilter 
    </filter-class>
    <init-param>
      <param-name>roles</param-name>
      <param-value>user admin test</param-value>
    </init-param>
    <init-param>
      <param-name>onError</param-name>
      <param-value>/irLogin.dd</param-value>
    </init-param>
</filter>

  <filter-mapping>
    <filter-name>userAccessFilter</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>

 
  
    <!-- Configuración de Struts -->


<!-- Action Servlet Mapping    -->

    <servlet>
        <servlet-name>action</servlet-name>
        <servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
        <init-param>
            <param-name>config</param-name>
            <param-value>/WEB-INF/struts-config.xml</param-value>
        </init-param>
        <load-on-startup>2</load-on-startup>

        <multipart-config>
<!--  50MB max  -->
            <max-file-size>52428800</max-file-size>
            <max-request-size>52428800</max-request-size>
            <file-size-threshold>0</file-size-threshold>
    </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>action</servlet-name>
        <url-pattern>/irLogin.dd</url-pattern>
        <url-pattern>/procesarLogin.dd</url-pattern>
        <url-pattern>/irLugares.dd</url-pattern>
        <url-pattern>/servicios.dd</url-pattern>
    </servlet-mapping>

  

    <!-- Action Servlet Mapping  -->

  <servlet>
        <servlet-name>action2</servlet-name>
        <servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
        <init-param>
            <param-name>config</param-name>
            <param-value>/WEB-INF/struts-config.xml</param-value>
        </init-param>
        <load-on-startup>2</load-on-startup>
    </servlet>


    <servlet-mapping>
        <servlet-name>action2</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
  
  
 
  
    <welcome-file-list>
        <welcome-file>irInicio.do</welcome-file>
    </welcome-file-list>


